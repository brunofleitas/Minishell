
{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "/usr/include",
                "/usr/local/include",
                "/usr/include/x86_64-linux-gnu"  // Add this for system headers
            ],
            "defines": [],
            "compilerPath": "/usr/bin/clang",   // Or change to /usr/bin/gcc if needed
            "cStandard": "c17",
            "cppStandard": "c++14",
            "intelliSenseMode": "linux-clang-x64",
            "compilerArgs": [
                "-std=gnu17"  // Add GNU extensions if needed, or leave this out if not
            ]
        }
    ],
    "version": 4
}

